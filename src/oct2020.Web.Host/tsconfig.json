{
  "compilerOptions": {
    "declaration": false,
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es6",
      "dom"
    ],
    "module": "esnext",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "@abp/*": [
        "./node_modules/abp-ng2-module/dist/src/*"
      ],
      "@app/*": [
        "./src/app/*"
      ],
      "@shared/*": [
        "./projects/my-lib/src/*"
      ],
      "@node_modules/*": [
        "./node_modules/*"
      ]
    }
  }
}